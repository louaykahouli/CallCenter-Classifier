# Configuration de l'API - Utilise Hugging Face

# === MODÈLE HUGGING FACE ===
# Nom de votre modèle sur HF (changez "Kahouli" par votre username)
HF_MODEL_NAME=Kahouli/callcenter-ticket-classifier

# Token HF (optionnel pour modèles publics)
# HF_TOKEN=hf_your_token_here

# === MODE LOCAL (Fallback) ===
# Mettre à True pour utiliser le modèle local au lieu de HF
USE_LOCAL_MODEL=False
# LOCAL_MODEL_PATH=./models/transformer/best_model

# === API CONFIGURATION ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False

# === GPU ===
USE_GPU=True

# === MONITORING (Optionnel) ===
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=ticket_classification
# PROMETHEUS_PORT=8001
